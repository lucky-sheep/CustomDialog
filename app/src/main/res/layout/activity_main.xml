        <!--            cornerType="@{CornerType.OTHER_BOTTOM_RIGHT}"-->
        <!--            height="@{vm.height}"-->
        <!--            imageUrl="@{vm.imgErrorUrl}"-->
        <!--            strokeColor="@{@color/hlj_image_colorPrimary}"-->
        <!--            strokeWidth="@{1.5f}"-->
        <!--            width="@{vm.deviceWidth}"-->
