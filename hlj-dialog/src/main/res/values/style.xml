<resources>

    <style name="Dialog_lib_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogAnimCenter" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_scale_out</item>
    </style>

    <style name="DialogAnimBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_lib_slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_lib_slide_out_down</item>
    </style>

</resources>
